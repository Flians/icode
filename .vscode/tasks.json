{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compile_mac",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-Wall",
                "-std=c++11",
                "-stdlib=libc++",
                "-lc++",
                "-Wno-format",
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile_win",
            "command": "g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-static-libgcc",
                "-std=c++11",
                "-Wno-format",
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8"
            ],
            "options": {
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}